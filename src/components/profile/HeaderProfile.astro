---
import { Image } from "astro:assets";
import Icons from "@components/shared/Icons.astro";
import ProfileImage from "@assets/me.avif";

import DownloadCv from "./DownloadCv.astro";
---

<div
  class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden mb-8"
>
  <div class="relative h-32 bg-gradient-to-r from-primary to-secondary">
    <div class="absolute -bottom-16 left-8">
      <div
        class="w-32 h-32 rounded-full border-4 border-white dark:border-gray-800 bg-white dark:bg-gray-700 shadow-lg"
      >
        <Image
          loading={"lazy"}
          src={ProfileImage}
          alt="Profile Image"
          class="w-full h-full rounded-full object-cover"
        />
      </div>
    </div>
  </div>
  <div class="pt-20 px-8 pb-8">
    <div
      class="flex md:flex-row flex-col gap-2 justify-center md:justify-between items-start"
    >
      <div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white">
          Leonel Elizarraraz
        </h1>
        <p class="mt-2 text-xl text-textLight dark:text-textDark">
          Front-end Developer
        </p>
      </div>
      <DownloadCv />
    </div>
    <div class="mt-6 flex flex-wrap gap-4">
      <a
        href="mailto:leonel.ayoel@gmail.com"
        class="flex items-center gap-2 text-textLight dark:text-textDark hover:text-primary"
      >
        <Icons name={"mdi:email"} />
        leonel.ayoel@gmail.com
      </a>
      <a
        href="tel:+523121355589"
        class="flex items-center gap-2 text-textLight dark:text-textDark hover:text-primary"
      >
        <Icons name="mdi:phone" />
        +52 312 135 5589
      </a>
    </div>
    <div class="mt-4 flex gap-4 flex-wrap">
      <a
        href="https://www.linkedin.com/in/leonel-elizarraraz/"
        target="_blank"
        class="text-textLight gap-2 flex items-center dark:text-textDark hover:text-primary"
      >
        <Icons name={"mdi:linkedin"} />
        Perfil de LinkedIn
      </a>
    </div>
  </div>
</div>
